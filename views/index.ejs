        </ul>

        <form id="search_form" action="/search" method="POST" class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" id="keyword" name="keyword" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fas fa-search"></i></button>
        </form>
      </div>
    </nav>

     <!-- Cards for the Items fetched -->
     <p> <% for (i = 0; i < value.length; i += 3) { %> </p>
        <div class="card-columns" style="width: 70rem; margin-left: 10rem;">
          <a class="card text-white" style="width: 20rem; background-color: #845EC2;" href="../item/?stuffId=<%=i%>">
            <div class="card-body">
              <h5 class="card-title"><%= value[i].name %></h5>
              <p class="card-text"><%= value[i].description%></p>
            </div>
          </a>
          <% if( i + 1 < value.length ) {%>
          <a class="card text-white" style="width: 20rem; background-color: #845EC2;" href="../item/?stuffId=<%=i + 1%>">
            <div class="card-body">
              <h5 class="card-title"><%= value[i + 1].name %></h5>
              <p class="card-text"><%= value[i + 1].description%></p>
            </div>
          </a>
          <% } if ( i + 2 < value.length ) {%>
          <a class="card text-white" style="width: 20rem; background-color: #845EC2;" href="../item/?stuffId=<%=i + 2%>">
            <div class="card-body">
              <h5 class="card-title"><%= value[i + 2].name %></h5>
              <p class="card-text"><%= value[i + 2].description%></p>
            </div>
          </a>
        </div>
      <% }} %>

